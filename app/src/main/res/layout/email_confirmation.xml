<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt6"
        style="@style/text"
        android:layout_below="@id/img2"
        android:text="We have sent an email to"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/txt7"
        style="@style/text"
        android:layout_below="@id/txt6"
        android:text="nwachiemi@gmail.com"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt8"
        style="@style/text"
        android:layout_below="@id/txt7"
        android:text="Click on the link in the email to confirm your"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn7"
        style="@style/button_layout"
        android:layout_below="@id/txt8"
        android:background="@drawable/button2"
        android:text="OPEN EMAIL APP"
        android:textColor="@color/background1"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn8"
        style="@style/button_layout"
        android:layout_below="@id/btn7"
        android:background="@drawable/button1"
        android:text="I HAVE CONFIRMED MY EMAIL"
        android:textColor="@color/button"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn9"
        style="@style/button_layout"
        android:layout_below="@id/btn8"
        android:background="@drawable/button1"
        android:text="RESEND CONFIRMATION EMAIL"
        android:textColor="@color/button"
        android:layout_marginTop="20dp"/>


</RelativeLayout>